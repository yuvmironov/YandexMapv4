@import "../libs/Accordeon/MFSAccordeon"
@import "../libs/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar"
*
	margin 0
	padding 0
[class*="ymaps-2"][class*="-ground-pane"] {
	filter saturate(0.5) contrast(95%) brightness(105%)
}

.MapWrap
	display flex
	justify-content space-between
	height 90vh
#Map, #DescMap
	height 100%
#Map
	width 40%
#DescMap
	width 60%

.DescMap
	&-BredCrambsLink
		font-family: 'Roboto';
		font-size: 14px;
		&_This
			color: #D64B4B;
		&_NotThis
			color #828282
			&:after
				content: '/';
				display: inline-block;
				padding-left: 5px;
				padding-right: 5px;
	&-Header
		height: 80px
		background-color: #F2F2F2
		display: flex;
		align-items: center;
		padding: 0 25px;
		justify-content: space-between;
	&-City
		height: 100%
		display: flex;
		align-items: center;
		width: 17%;
	&-CityName
		height: 50%;
		display: flex;
		align-items: center;
		padding-left: 50px;
		border-left: 1px solid #e0e0e0;
		position: relative
		font-family: Roboto;
		font-size: 14px;
		text-decoration-line: underline;
		color: #333333;
		&:before
			content: '';
			display: block;
			background-image: url(ic_room.png);
			top: calc(50% - 9px);
			left: 20px;
			position: absolute;
			width: 18px;
			height: 18px;